<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Blanoco"
    tools:context=".activitys.UsuarioActivity">

    <LinearLayout
        android:id="@+id/LinearLayout_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="0dp"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <LinearLayout
            android:id="@+id/LinearLayoutHorisontal_2"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:background="@color/Verde"
            android:gravity="bottom"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/seleccionar"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="bottom"
                android:text="@string/IndicadorLista"
                android:textColor="@color/Amarillo"
                android:textSize="24sp"
                android:textStyle="bold|italic" />

            <ImageButton
                android:id="@+id/imgBtnScanner"
                android:layout_width="65dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:onClick="onClickScanner"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/scaner" />

            <ImageButton
                android:id="@+id/imgBtnIdProduct"
                android:layout_width="65dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:onClick="onClickCodigo"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/codigobarras" />

            <ImageButton
                android:id="@+id/imgBtnAdd"
                android:layout_width="65dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:onClick="onClickNombre"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/agregar" />

            <ImageButton
                android:id="@+id/imgBtnActualizar"
                android:layout_width="65dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:padding="3dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/actualizar" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/Verde"
            android:gravity="bottom"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="62dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:gravity="bottom"
                android:text="Nombre del Producto"
                android:textColor="@color/Amarillo"
                android:textSize="18sp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:gravity="bottom"
                android:text="Cantidad"
                android:textColor="@color/Amarillo"
                android:textSize="18sp"
                android:textStyle="bold|italic" />
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvLista"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:background="@color/viewfinder_mask"
            android:scrollbars="vertical" />

    </LinearLayout>

</RelativeLayout>